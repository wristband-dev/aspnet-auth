{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "frontendRoute": {
        "ClusterId": "frontendCluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [
          {
            "RequestHeaderOriginalHost": "true"
          }
        ]
      },
      "apiRoute": {
        "ClusterId": "apiCluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          },
          {
            "RequestHeaderOriginalHost": "true"
          }
        ]
      }
    },
    "Clusters": {
      "reactCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://frontend",
            "Health": "http://frontend/readiness"
          }
        }
      },
      "apiCluster": {
        "Destinations": {
          "destination3": {
            "Address": "http://api",
            "Health": "http://api/readiness"
          }
        }
      }
    }
  }
}
